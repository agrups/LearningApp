<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!-- Create person table -->
    <changeSet id="1" author="agrups">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="person"/>
            </not>
        </preConditions>
        <createTable tableName="person">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="surname" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!-- Insert initial persons (safe for dev) -->
    <changeSet id="2-1" author="agrups" context="dev">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM person
                WHERE email = 'email@mail.com'
            </sqlCheck>
        </preConditions>
        <insert tableName="person">
            <column name="name" value="Greta"/>
            <column name="surname" value="Pavarde"/>
            <column name="email" value="email@mail.com"/>
            <column name="password" value="{noop}password"/>
        </insert>
    </changeSet>
    <changeSet id="2-2" author="agrups" context="dev">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM person
                WHERE email = 'jonaitis@mail.com'
            </sqlCheck>
        </preConditions>
        <insert tableName="person">
            <column name="name" value="Jonas"/>
            <column name="surname" value="Jonaitis"/>
            <column name="email" value="jonaitis@mail.com"/>
            <column name="password" value="{noop}password"/>
        </insert>
    </changeSet>

    <!-- Create meeting table -->
    <changeSet id="3" author="agrups">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="meeting"/>
            </not>
        </preConditions>
        <createTable tableName="meeting">
            <column name="category" type="smallint"/>
            <column name="type" type="smallint"/>
            <column name="end_date" type="timestamp(6)"/>
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="responsible_person_id" type="bigint"/>
            <column name="start_date" type="timestamp(6)"/>
            <column name="description" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!-- Add check constraints to meeting table -->
    <changeSet id="3a" author="agrups">
        <preConditions onFail="MARK_RAN">
                <and>
                    <sqlCheck expectedResult="0">
                        SELECT COUNT(*) FROM information_schema.table_constraints
                        WHERE table_name='meeting' AND constraint_name='meeting_category_check'
                    </sqlCheck>
                    <sqlCheck expectedResult="0">
                        SELECT COUNT(*) FROM information_schema.table_constraints
                        WHERE table_name='meeting' AND constraint_name='meeting_type_check'
                    </sqlCheck>
                </and>
        </preConditions>
        <sql>
        <![CDATA[
            ALTER TABLE meeting
                ADD CONSTRAINT meeting_category_check CHECK (category >= 0 AND category <= 3);
            ALTER TABLE meeting
                ADD CONSTRAINT meeting_type_check CHECK (type >= 0 AND type <= 1);
            ]]>
        </sql>
    </changeSet>

    <!-- Add foreign key constraint to meeting table -->
    <changeSet id="3b" author="agrups">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk2b9i5p4b6uikmlcsoakqmm4ik"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="meeting"
                                 baseColumnNames="responsible_person_id"
                                 referencedTableName="person"
                                 referencedColumnNames="id"
                                 constraintName="fk2b9i5p4b6uikmlcsoakqmm4ik"/>
    </changeSet>

    <!-- Insert initial meetings (safe for dev) -->
    <changeSet id="4-1" author="agrups" context="dev">
        <preConditions onFail="MARK_RAN">
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM meeting WHERE name = 'Susirinkimas' AND responsible_person_id = 1
                </sqlCheck>
        </preConditions>
        <insert tableName="meeting">
            <column name="name" value="Susirinkimas"/>
            <column name="responsible_person_id" valueNumeric="1"/>
            <column name="description" value="Aprasymas"/>
            <column name="category" valueNumeric="0"/>
            <column name="type" valueNumeric="0"/>
            <column name="start_date" value="2024-07-01 10:00:00"/>
            <column name="end_date" value="2024-07-02 11:00:00"/>
        </insert>
    </changeSet>
    <changeSet id="4-2" author="agrups" context="dev">
        <preConditions onFail="MARK_RAN">
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM meeting WHERE name = 'Susirinkimas 2' AND responsible_person_id = 2
                </sqlCheck>
        </preConditions>
        <insert tableName="meeting">
            <column name="name" value="Susirinkimas 2"/>
            <column name="responsible_person_id" valueNumeric="2"/>
            <column name="description" value="Aprasymas 2"/>
            <column name="category" valueNumeric="1"/>
            <column name="type" valueNumeric="1"/>
            <column name="start_date" value="2024-07-01 10:00:00"/>
            <column name="end_date" value="2024-07-02 11:00:00"/>
        </insert>
    </changeSet>

    <!-- Create meeting_attendees table -->
    <changeSet id="5" author="agrups">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="meeting_attendees"/>
            </not>
        </preConditions>
        <createTable tableName="meeting_attendees">
            <column name="attendees_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="meeting_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

<!--     Add foreign key constraints to meeting_attendees table -->
    <changeSet id="5a" author="agrups">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <foreignKeyConstraintExists foreignKeyName="fkeeae4e774f9xvk241gh90hym4"/>
                </not>
                <not>
                    <foreignKeyConstraintExists foreignKeyName="fkjjmrfe13v8xs66xj78pudgt1h"/>
                </not>
            </and>
        </preConditions>
        <addForeignKeyConstraint baseTableName="meeting_attendees"
                                 baseColumnNames="attendees_id"
                                 referencedTableName="person"
                                 referencedColumnNames="id"
                                 constraintName="fkeeae4e774f9xvk241gh90hym4"/>
        <addForeignKeyConstraint baseTableName="meeting_attendees"
                                 baseColumnNames="meeting_id"
                                 referencedTableName="meeting"
                                 referencedColumnNames="id"
                                 constraintName="fkjjmrfe13v8xs66xj78pudgt1h"/>
    </changeSet>

    <!-- Insert initial meeting attendees (safe for dev) -->
    <changeSet id="6-1" author="agrups" context="dev">
        <preConditions onFail="MARK_RAN">
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM meeting_attendees WHERE attendees_id = 1 AND meeting_id = 1
                </sqlCheck>
        </preConditions>
        <insert tableName="meeting_attendees">
            <column name="attendees_id" valueNumeric="1"/>
            <column name="meeting_id" valueNumeric="1"/>
        </insert>
    </changeSet>
    <changeSet id="6-2" author="agrups" context="dev">
        <preConditions onFail="MARK_RAN">
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM meeting_attendees WHERE attendees_id = 2 AND meeting_id = 2
                </sqlCheck>
        </preConditions>
        <insert tableName="meeting_attendees">
            <column name="attendees_id" valueNumeric="2"/>
            <column name="meeting_id" valueNumeric="2"/>
        </insert>
    </changeSet>
    <include file="db/changelog/2025/09/add_email_to_customer.sql"/>
    <include file="db/changelog/2025/09/remove_email_to_person.sql"/>
    <include file="db/changelog/2025/10/08-01-changelog.json"/>
    <include file="db/changelog/2025/10/08-02-changelog.json"/>
</databaseChangeLog>
